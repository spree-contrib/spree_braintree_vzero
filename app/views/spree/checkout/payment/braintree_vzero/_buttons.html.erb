<% @order.available_payment_methods.each do |method| %>
  <% next unless method.kind_of?(Spree::Gateway::BraintreeVzeroBase) %>

  <% if method.is_a?(Spree::Gateway::BraintreeVzeroPaypalExpress) %>
         <span id="paypal-submit", class="btn btn-lg btn-success primary braintree-submit", style="display: none;" method_id="<%= method.id %>">
      <%= Spree.t(:save_and_continue) %>
    </span>
  <% else %>
    <%= submit_tag Spree.t(:save_and_continue), class: 'btn btn-lg btn-success primary braintree-submit', style: 'display: none;', method_id: method.id %>
  <% end %>
<% end %>
